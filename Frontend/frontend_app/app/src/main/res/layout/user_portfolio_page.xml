<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.PortfolioPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stock_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/backHome_PortfolioBtn"
        android:layout_width="81dp"
        android:layout_height="60dp"
        android:text="Back"
        android:textColor="@color/txtclr"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/stockCard1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="@color/navy_bg"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <EditText
            android:id="@+id/stock1_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="20dp"
            android:text="Stock 1"
            android:textColor="@color/txtclr"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/stock1_num"
            android:layout_width="97dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="x0"
            android:textColor="@color/txtclr" />

        <EditText
            android:id="@+id/stock1_price"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_horizontal"
            android:layout_margin="20dp"
            android:text="$0"
            android:textColor="@color/txtclr" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>